    </dl>

    <form asp-action="Excluir">
        <div class="form-group input-icon">
            <input type="hidden" asp-for="RowKey" class="form-control" />
            <input type="hidden" asp-for="PartitionKey" class="form-control" />
            <input type="hidden" asp-for="Timestamp" class="form-control" />
            <input type="hidden" asp-for="ETag" class="form-control" />
        </div>
        <input type="submit" value="Excluir" class="btn btn-danger" />
    </form>
</div>
